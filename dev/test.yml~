# fig up -f fig-test.yml
# data container
data:
  image: "blijblijblij/base:latest"
  volumes:
    - "~/.docker-volumes/dev/db/:/var/lib/mysql"
# database
db:
  image: "tutum/mysql:5.5"
  volumes_from:
    - "data"
  environment:
    - MYSQL_USER:"root"
    - MYSQL_PASS:"password"
  expose:
    - "3306"
  ports:
  - "3306:3306"
haproxy:
  image: "tutum/haproxy"
  environment:
    PORT: "8080"
    BALANCE: "source"
    FRONTEND_PORT: "80"
    BACKEND_PORT: "8080"
  expose:
    - "80"
  ports:
    - "8080:80"
  links:
    - biserverleft
    - biserverright
#biserver 1
biserverleft:
  image: "blijblijblij/pentaho:biserver-ce-5.3"
  expose:
    - "8080"
  ports:
    - "8080"
  links:
    - db
#biserver 2
biserverright:
  image: "blijblijblij/pentaho:biserver-ce-5.3"
  expose:
    - "8080"
  ports:
    - "8080"
  links:
    - db
